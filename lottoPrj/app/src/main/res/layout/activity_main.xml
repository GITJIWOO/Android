<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/lottoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="129dp"
        android:text="추첨하기"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/value2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/value2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/value3"
        app:layout_constraintStart_toStartOf="@+id/value1" />

    <TextView
        android:id="@+id/value3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/value4"
        app:layout_constraintStart_toStartOf="@+id/value2"
        app:layout_constraintTop_toBottomOf="@+id/lottoBtn" />

    <TextView
        android:id="@+id/value4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/value7"
        app:layout_constraintTop_toTopOf="@+id/value3" />

    <TextView
        android:id="@+id/value5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/value4"
        app:layout_constraintStart_toStartOf="@+id/value4" />

    <TextView
        android:id="@+id/value6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/value5"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:text="보너스 번호 : "
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/value7"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/value7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>